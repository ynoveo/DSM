<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:l="sap.ui.layout"
  xmlns:form="sap.ui.layout.form">
	
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<l:content>
			<MaskInput mask = "LCCCCC" placeholderSymbol = "_" placeholder = "{i18n>EditNameDataSet}" >
				<rules>
					<MaskInputRule maskFormatSymbol = "L" regex = "[A-Z]"/>
					<MaskInputRule maskFormatSymbol = "C" regex = "[A-Z0-9]"/>
				</rules>
			</MaskInput>
		</l:content>
	</l:VerticalLayout>
		
</core:FragmentDefinition>	